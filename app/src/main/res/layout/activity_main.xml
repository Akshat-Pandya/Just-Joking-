<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#5E35B1">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Just Joking ! "
             android:textColor="@color/white"
            android:layout_marginStart="4dp"
             android:textStyle="bold"
             android:layout_centerVertical="true"
             android:textSize="24sp"/>
         <ImageView
             android:id="@+id/mymenu"
             android:layout_width="24dp"
             android:layout_height="24dp"
             android:background="@drawable/baseline_menu_24"
             android:layout_centerVertical="true"
             android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"/>

     </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_black">
        <com.yuyakaido.android.cardstackview.CardStackView
            android:id="@+id/cardStack"
            android:layout_width="350dp"
            android:layout_height="500sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/card_bg"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@+id/leftOverlay"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/baseline_thumb_down_off_alt_24"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/rightOverlay"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/baseline_thumb_up_off_alt_24"
            android:visibility="invisible"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:layout_below="@+id/cardStack"
            android:gravity="center"
           >
            <ImageView
                android:id="@+id/dislike"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="4.5dp"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:outlineSpotShadowColor="#807878"
                android:outlineAmbientShadowColor="#807878"
                android:background="@drawable/circle"
                android:src="@drawable/baseline_thumb_down_24"
                />
            <ImageView
                android:id="@+id/refresh"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/baseline_refresh_24"
                />
            <ImageView
                android:id="@+id/like"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="4.5dp"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:outlineSpotShadowColor="#807878"
                android:outlineAmbientShadowColor="#807878"
                android:background="@drawable/circle"
                android:src="@drawable/baseline_thumb_up_24"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>